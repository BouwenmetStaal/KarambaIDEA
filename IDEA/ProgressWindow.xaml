<Window x:Class="KarambaIDEA.IDEA.ProgressWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarambaIDEA.IDEA"
             mc:Ignorable="d" 
             Height="300" Width="600"
             Title="KarambaIDEA user feedback">
    <Grid>
        <Button Content="Close" Name="button_close" Click="button_close_Click" Margin="0,0,20,24" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>
        <TextBox Name="Textbox1" x:FieldModifier="public"   TextWrapping="NoWrap"  Margin="22,46,20,68" IsReadOnly="False" TextChanged="Textbox1_TextChanged"/>
        <TextBlock Name="numbermessage" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Current task:" VerticalAlignment="Top" Margin="22,15,0,0" Height="31" Width="237"/>
        <TextBlock HorizontalAlignment="Left" Height="43" Margin="22,218,0,0" TextWrapping="Wrap" Text="Warning: clicking in the GH canvas while this window is visible may result in the mouse buttons being partly frozen. Rerunning this window can unfreeze the mouse buttons." VerticalAlignment="Top" Width="472"/>

    </Grid>
</Window>
